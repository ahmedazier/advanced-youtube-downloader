<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Advanced YouTube Downloader</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="light-mode" id="body">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container">
      <a class="navbar-brand" href="/">YouTube Downloader</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/downloads">Downloads</a>
          </li>
          <li class="nav-item">
            <button class="btn btn-outline-light ms-3" id="toggleThemeBtn">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="hero">
    <div class="container">
      <h1>Advanced YouTube Downloader</h1>
      <p>Download, merge, and play your favorite YouTube videos in high resolution.</p>
    </div>
  </div>

  <div class="container">
    <% if (error) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <!-- Video Info Preview -->
    <div class="mb-5">
      <h3 class="mb-3">Check Video Info & Available Formats</h3>
      <div class="input-group mb-2">
        <input type="text" id="infoUrl" class="form-control" placeholder="Enter YouTube URL">
        <button id="getInfoBtn" class="btn btn-secondary">Show Info</button>
        <button id="checkFormatsBtn" class="btn btn-info">Check Available Formats</button>
      </div>
      <div id="infoResult"></div>
      <div id="formatsResult"></div>
    </div>

    <hr>

    <!-- Progressive Download Form -->
    <div class="mb-5">
      <h3>Progressive Download (Fast)</h3>
      <form id="progressiveForm">
        <div class="mb-3">
          <label for="url" class="form-label">YouTube URL</label>
          <input type="text" name="url" id="url" class="form-control" placeholder="Enter YouTube URL" required>
        </div>
        <div class="mb-3">
          <label for="resolution" class="form-label">Select Resolution</label>
          <select name="resolution" id="resolution" class="form-select">
            <option value="360">360p (Low Quality)</option>
            <option value="720">720p (Medium Quality)</option>
            <option value="1080">1080p (High Quality)</option>
            <option value="1440">1440p (2K Quality)</option>
            <option value="2160">2160p (4K Quality)</option>
            <option value="highest" selected>Highest Available (Best Quality)</option>
            <option value="best">Best (Fallback Options)</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary btn-custom">Download & Play (Progressive)</button>
      </form>
      <div id="progressiveResult"></div>
    </div>

    <hr>

    <!-- Full Resolution Download Form (Merged) -->
    <div class="mb-5">
      <h3>Full Resolution Download (Merged)</h3>
      <form id="fullDownloadForm">
        <div class="mb-3">
          <label for="fullUrl" class="form-label">YouTube URL</label>
          <input type="text" name="url" id="fullUrl" class="form-control" placeholder="Enter YouTube URL" required>
        </div>
        <div class="mb-3">
          <label for="fullResolution" class="form-label">Select Resolution</label>
          <select name="resolution" id="fullResolution" class="form-select">
            <option value="360">360p (Low Quality)</option>
            <option value="720">720p (Medium Quality)</option>
            <option value="1080">1080p (High Quality)</option>
            <option value="1440">1440p (2K Quality)</option>
            <option value="2160">2160p (4K Quality)</option>
            <option value="highest" selected>Highest Available (Best Quality)</option>
            <option value="best">Best (Fallback Options)</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="saveName" class="form-label">Save As (Optional)</label>
          <input type="text" name="saveName" id="saveName" class="form-control" placeholder="Enter desired file name (without extension)">
        </div>
        <button type="submit" class="btn btn-danger btn-custom">Download & Play (Merged)</button>
      </form>
      <div id="fullDownloadResult"></div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Dark Mode Toggle
    const body = document.getElementById('body');
    const toggleThemeBtn = document.getElementById('toggleThemeBtn');
    toggleThemeBtn.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      body.classList.toggle('light-mode');
      toggleThemeBtn.textContent = body.classList.contains('dark-mode') ? 'Light Mode' : 'Dark Mode';
    });

    // Video Info AJAX Request
    const getInfoBtn = document.getElementById('getInfoBtn');
    const checkFormatsBtn = document.getElementById('checkFormatsBtn');
    const infoUrl = document.getElementById('infoUrl');
    const infoResult = document.getElementById('infoResult');
    const formatsResult = document.getElementById('formatsResult');
    
    getInfoBtn.addEventListener('click', async () => {
      if (!infoUrl.value) {
        alert('Please enter a YouTube URL');
        return;
      }
      try {
        const response = await fetch('/api/get-info', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url: infoUrl.value })
        });
        const data = await response.json();
        if (data.error) {
          infoResult.innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
        } else {
          infoResult.innerHTML = `
            <div class="card mx-auto" style="max-width: 500px;">
              <img src="${data.thumbnail}" class="card-img-top" alt="Thumbnail">
              <div class="card-body">
                <h5 class="card-title">${data.title}</h5>
                <p class="card-text">Duration: ${data.duration}</p>
              </div>
            </div>
          `;
        }
      } catch (err) {
        infoResult.innerHTML = `<div class="alert alert-danger">Request failed.</div>`;
      }
    });
    
    // Check Formats AJAX Request
    checkFormatsBtn.addEventListener('click', async () => {
      if (!infoUrl.value) {
        alert('Please enter a YouTube URL');
        return;
      }
      try {
        const response = await fetch('/api/check-formats', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url: infoUrl.value })
        });
        const data = await response.json();
        if (data.error) {
          formatsResult.innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
        } else {
          let formatsHtml = `
            <div class="alert alert-success">
              <h5>Available Formats</h5>
              <p><strong>Highest Quality Available:</strong> ${data.highestQuality}</p>
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Format</th>
                      <th>Resolution</th>
                      <th>Size</th>
                      <th>Note</th>
                    </tr>
                  </thead>
                  <tbody>
          `;
          
          data.formats.forEach(format => {
            formatsHtml += `
              <tr>
                <td>${format.id}</td>
                <td>${format.ext}</td>
                <td>${format.resolution}</td>
                <td>${format.size}</td>
                <td>${format.note}</td>
              </tr>
            `;
          });
          
          formatsHtml += `
                  </tbody>
                </table>
              </div>
            </div>
          `;
          
          formatsResult.innerHTML = formatsHtml;
        }
      } catch (err) {
        formatsResult.innerHTML = `<div class="alert alert-danger">Request failed.</div>`;
      }
    });

    // Progressive Download Form
    const progressiveForm = document.getElementById('progressiveForm');
    const progressiveResult = document.getElementById('progressiveResult');
    
    progressiveForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      console.log('Progressive Download form submitted');
      
      const url = document.getElementById('url').value;
      const resolution = document.getElementById('resolution').value;
      
      console.log('URL:', url);
      console.log('Resolution:', resolution);
      
      if (!url) {
        alert('Please enter a YouTube URL');
        return;
      }
      
      progressiveResult.innerHTML = '<div class="alert alert-info">Processing...</div>';
      
      try {
        console.log('Sending request to /api/progressive-download');
        const response = await fetch('/api/progressive-download', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url, resolution })
        });
        console.log('Response received:', response.status);
        
        const data = await response.json();
        console.log('Response data:', data);
        
        if (data.error) {
          progressiveResult.innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
        } else {
          progressiveResult.innerHTML = `
            <div class="alert alert-success">
              <h5>Download URL Ready!</h5>
              <p>Click the button below to download and play:</p>
              <a href="${data.downloadUrl}" class="btn btn-success" target="_blank">Download & Play</a>
            </div>
          `;
        }
      } catch (err) {
        console.error('Error:', err);
        progressiveResult.innerHTML = `<div class="alert alert-danger">Request failed: ${err.message}</div>`;
      }
    });

    // Full Download Form
    const fullDownloadForm = document.getElementById('fullDownloadForm');
    const fullDownloadResult = document.getElementById('fullDownloadResult');
    
    fullDownloadForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      console.log('Full Download form submitted');
      
      const url = document.getElementById('fullUrl').value;
      const resolution = document.getElementById('fullResolution').value;
      const saveName = document.getElementById('saveName').value;
      
      console.log('URL:', url);
      console.log('Resolution:', resolution);
      console.log('Save Name:', saveName);
      
      if (!url) {
        alert('Please enter a YouTube URL');
        return;
      }
      
      fullDownloadResult.innerHTML = '<div class="alert alert-info">Processing...</div>';
      
      try {
        console.log('Sending request to /api/full-download');
        const response = await fetch('/api/full-download', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url, resolution, saveName })
        });
        console.log('Response received:', response.status);
        
        const data = await response.json();
        console.log('Response data:', data);
        
        if (data.error) {
          fullDownloadResult.innerHTML = `<div class="alert alert-danger">${data.error}</div>`;
        } else {
          fullDownloadResult.innerHTML = `
            <div class="alert alert-success">
              <h5>Download Started!</h5>
              <p>File: ${data.fileName}</p>
              <p>Status: ${data.status}</p>
            </div>
          `;
        }
      } catch (err) {
        console.error('Error:', err);
        fullDownloadResult.innerHTML = `<div class="alert alert-danger">Request failed: ${err.message}</div>`;
      }
    });
  </script>
</body>
</html>
