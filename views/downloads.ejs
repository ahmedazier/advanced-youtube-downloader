<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Downloads</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="light-mode" id="body">
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-0">Downloaded Videos</h1>
      <a href="/" class="btn btn-primary">Back to Home</a>
    </div>

    <% if (files.length === 0) { %>
      <p>No downloaded videos found.</p>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Filename</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% files.forEach(file => { %>
            <tr>
              <td><%= file %></td>
              <td>
                <!-- Link to play the local file in the player page -->
                <a href="/downloads/<%= file %>" target="_blank" class="btn btn-sm btn-success">Play</a>
                
                <!-- Delete the file from the server -->
                <form action="/delete-file" method="POST" style="display:inline-block;">
                  <input type="hidden" name="filename" value="<%= file %>">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
